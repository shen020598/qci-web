---
import { Image } from "astro:assets";
import { t, localePath } from '../utils/i18n';

const lang = Astro.props.language || 'en';
const translations = t(lang);
const footerTranslations = translations.footer;
const navTranslations = translations.navbar;
---

<footer class="bg-[#edf7f7] text-[#2b2623]">
  <div class="max-w-9xl mx-auto px-6 py-16">
    <!-- TOP GRID -->
    <div class="grid md:grid-cols-4 gap-10 border-b border-green-800 pb-12">
      <!-- BRAND -->
      <div>
        <div class="flex items-center gap-3 mb-5">
          <Image
            src={import("../assets/qci-logo-main.png")}
            alt="Quality Coils Industries logo"
            class="w-14"
            loading="lazy"
            width={56}
            height={56}
          />
          <h3 class="font-semibold text-xl">{footerTranslations.brandName}</h3>
        </div>

        <p class="text-base leading-relaxed">
          {footerTranslations.brandDescription}
        </p>
      </div>

      <!-- CONTACT -->
      <div class="md:border-l md:border-green-800 md:pl-8">
        <h4 class="font-semibold text-xl mb-5">{footerTranslations.contactHeading}</h4>

        <div class="space-y-3 text-base">
          <p>05-4652771</p>
          <p>05-4652772</p>
          <p>05-4665334</p>
          <p>info@qci.com.my</p>
        </div>
      </div>

      <!-- QUICK LINKS -->
      <div class="md:border-l md:border-green-800 md:pl-8">
        <h4 class="font-semibold text-xl mb-5">{footerTranslations.quickLinksHeading}</h4>

        <div class="grid grid-cols-2 gap-y-3 text-base">
          <a href={localePath('/', lang)} class="transition hover:text-secondary">{navTranslations.home}</a>
          <a href={localePath('/products', lang)} class="transition hover:text-secondary">
            {navTranslations.products}</a
          >
          <a href={localePath('/about', lang)} class="transition hover:text-secondary">{navTranslations.about}</a>
          <a href={localePath('/machinery', lang)} class="transition hover:text-secondary">
            {navTranslations.machinery}</a
          >
          <a href={localePath('/people', lang)} class="transition hover:text-secondary">{navTranslations.people}</a>
          <a href={localePath('/oem-advantage', lang)} class="transition hover:text-secondary">OEM</a>
          <a href={localePath('/careers', lang)} class="transition hover:text-secondary">{navTranslations.careers}</a>
          <a href={localePath('/contact', lang)} class="transition hover:text-secondary">{navTranslations.contact}</a>
        </div>
      </div>

      <!-- SOCIAL -->
      <div class="md:border-l md:border-green-800 md:pl-8">
        <h4 class="font-semibold text-xl mb-5">{footerTranslations.followUsHeading}</h4>

        <div class="flex gap-4">
          <a
            href="https://www.instagram.com/qci_official_?igsh=MWRqazY4ZzhrYWN6bw=="
            target="_blank"
            rel="noopener noreferrer"
            aria-label={footerTranslations.instagramAria}
            class="transition-all duration-300 hover:[filter:invert(27%)_sepia(51%)_saturate(2878%)_hue-rotate(200deg)_brightness(104%)_contrast(97%)]"
          >
            <Image
              src={import("../assets/icons/instagram.svg")}
              alt="Instagram"
              class="w-12 h-12"
              loading="lazy"
              width={48}
              height={48}
            />
          </a>
          <a
            href="https://www.facebook.com/share/15G1rURZkj/?mibextid=wwXIfr"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={footerTranslations.facebookAria}
            class="transition-all duration-300 hover:[filter:invert(27%)_sepia(51%)_saturate(2878%)_hue-rotate(200deg)_brightness(104%)_contrast(97%)]"
          >
            <Image
              src={import("../assets/icons/facebook.svg")}
              alt="Facebook"
              class="w-12 h-12"
              loading="lazy"
              width={48}
              height={48}
            />
          </a>
          <a
            href="https://www.linkedin.com/company/qcimalaysia"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={footerTranslations.linkedinAria}
            class="transition-all duration-300 hover:[filter:invert(27%)_sepia(51%)_saturate(2878%)_hue-rotate(200deg)_brightness(104%)_contrast(97%)]"
          >
            <Image
              src={import("../assets/icons/linkedin.svg")}
              alt="LinkedIn"
              class="w-12 h-12"
              loading="lazy"
              width={48}
              height={48}
            />
          </a>
        </div>
      </div>
    </div>

    <!-- ADDRESS + MAP -->
    <div class="grid md:grid-cols-2 gap-10 mt-12 items-center">
      <!-- ADDRESS -->
      <div>
        <h4 class="font-semibold text-xl mb-4">{footerTranslations.addressHeading}</h4>

        <p class="text-base leading-relaxed" set:html={footerTranslations.address}>
        </p>
      </div>

      <!-- MAP -->
      <iframe
        title={footerTranslations.mapTitle}
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6760.7213303525095!2d101.14700347681303!3d4.273903245205845!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31cb1cda15555555%3A0x89d30b2b531d1e8a!2sQuality%20Coils%20Industries%20Sdn.Bhd.!5e1!3m2!1sen!2smy!4v1770906246621!5m2!1sen!2smy"
        class="w-full h-[200px] border border-green-800 rounded"
        loading="lazy"></iframe>
    </div>
  </div>

  <!-- COPYRIGHT -->
  <div class="border-t border-green-800 text-center text-sm py-6">
    {footerTranslations.copyright}
  </div>
</footer>
