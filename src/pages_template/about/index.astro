---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import { Image } from 'astro:assets';
import { t } from "../../utils/i18n";

const lang = Astro.props.language || "en";
const translations = t(lang).about;
---

<BaseLayout 
    title={translations.meta.title}
    description={translations.meta.description}
>
    <Navbar language={lang} />
    <section>
        <!-- HERO BANNER -->
        <div class="relative h-[340px] md:h-[600px] overflow-hidden">
            <!-- Background -->
            <Image
                src={import('../../assets/about/thai-malaysia-bg.png')}
                alt={translations.hero.altBackground}
                class="w-full h-full object-cover object-top"
                loading="eager"
                width={1200}
                height={400}
            />

            <!-- Overlay -->
            <div class="absolute inset-0 bg-black/10"></div>

            <!-- Title -->
            <h1
                class="absolute inset-0 flex items-center justify-center
               text-white
               text-4xl md:text-6xl lg:text-8xl
               font-bold tracking-wide text-center px-4"
            >
                {translations.hero.title}
            </h1>
        </div>

        <!-- CONTENT AREA -->
        <div class="bg-primary py-16 lg:py-24">
            <!-- Wider container -->
            <div class="max-w-9xl mx-auto px-6 lg:px-12">
                <!-- Intro Label -->
                <p
                    class="text-sm md:text-base lg:text-xl font-bold mb-4 reveal"
                >
                    {translations.intro.label}
                </p>

                <!-- Main Paragraph -->
                <p
                    class="text-base md:text-xl lg:text-3xl leading-tight
        font-semibold leading-relaxed
        mb-12 max-w-9xl reveal"
                >
                    {translations.intro.description}
                </p>

                <!-- MEDIA + TEXT -->
                <div class="grid md:grid-cols-2 gap-10 lg:gap-16 items-center">
                    <!-- Video -->
                    <video
                        controls
                        autoplay
                        loop
                        muted
                        class="w-full rounded shadow-xl reveal-left"
                    >
                        <source
                            src="/assets/qci-intro-video.mp4"
                            type="video/mp4"
                        />
                    </video>

                    <!-- Side Text -->
                    <div
                        class="space-y-6
          text-base md:text-lg lg:text-2xl
          font-semibold leading-tight reveal-right"
                    >
                        <p>
                            {translations.intro.malaysiaText}
                        </p>

                        <p>
                            {translations.intro.thailandText}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-[#d8c9a6] w-full">
        <div class="max-w-9xl mx-auto px-6 2xl:px-0">
            <div class="flex flex-col md:flex-row items-center justify-between">
                <!-- LEFT -->
                <div class="bg-[#d8c9a6] reveal-left">
                    <h2
                        class="font-bold
          text-3xl md:text-4xl lg:text-4xl
          mb-6"
                    >
                        Our Commitment
                    </h2>

                    <p
                        class="text-sm md:text-base lg:text-2xl
          leading-tight
          max-w-3xl"
                    >
                        At QCI, mosquito control should never come at the
                        expense of safety or sustainability. That’s why our
                        products are developed using scientifically tested
                        ingredients and manufactured under strict quality
                        control measures to meet international regulatory
                        standards. We continuously invest in research and
                        development to create innovative, long-lasting mosquito
                        coils that offer superior protection against
                        vector-borne diseases.
                    </p>
                </div>

                <!-- RIGHT IMAGE -->
                <Image
                    src={import('../../assets/about/lab-experiment.jpg')}
                    alt={translations.commitment.altLab}
                    class="h-full object-cover reveal-right"
                    loading="lazy"
                    width={700}
                    height={525}
                />
            </div>
        </div>
    </section>

    <section class="bg-primary py-16 lg:py-24">
        <div class="max-w-9xl mx-auto px-6 lg:px-12 text-center">
            <!-- Title -->
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-12 reveal">
                {translations.expertise.title}
            </h2>

            <!-- Subtitle -->
            <p
                class="max-w-9xl mx-auto
      text-base md:text-lg lg:text-3xl
      font-semibold p-8
      leading-relaxed border-b-1 border-t-1
      mb-14 reveal"
            >
                {translations.expertise.subtitle}
            </p>

            <!-- GRID WRAPPER -->
            <div class="relative max-w-9xl mx-auto">
                <!-- Divider lines (desktop only) -->
                <div
                    class="hidden md:block absolute left-1/2 top-0 bottom-0 w-px bg-black/30"
                >
                </div>
                <div
                    class="hidden md:block absolute top-1/2 left-0 right-0 h-px bg-black/30"
                >
                </div>

                <!-- GRID -->
                <div class="grid md:grid-cols-2 gap-y-16 gap-x-16">
                    <!-- ITEM -->
                    <div class="space-y-4 px-6 reveal mb-6">
                        <Image
                            src={import('../../assets/about/about-formulation.png')}
                            alt={translations.expertise.formulation.alt}
                            class="mx-auto w-30"
                            loading="lazy"
                            width={100}
                            height={100}
                        />
                        <h3 class="text-xl md:text-3xl font-bold">
                            {translations.expertise.formulation.title}
                        </h3>
                        <p class="underline text-lg md:text-xl leading-tight">
                            {translations.expertise.formulation.subtitle}
                        </p>
                        <p
                            class="text-lg md:text-xl leading-tight text-black/80"
                        >
                            {translations.expertise.formulation.description}
                        </p>
                    </div>

                    <!-- ITEM -->
                    <div class="space-y-4 px-6 reveal mb-6">
                        <Image
                            src={import('../../assets/about/about-scent.png')}
                            alt="Custom scent icon"
                            class="mx-auto w-30"
                            loading="lazy"
                            width={100}
                            height={100}
                        />
                        <h3 class="text-xl md:text-3xl font-bold">Scent</h3>
                        <p class="underline text-lg md:text-xl leading-tight">
                            A unique scent to suit our customers’ preferences
                        </p>
                        <p
                            class="text-lg md:text-xl leading-tight text-black/80"
                        >
                            Customize the scent profile to match our customers'
                            preferences, making repellent use a pleasant and
                            personalized experience.
                        </p>
                    </div>

                    <!-- ITEM -->
                    <div class="space-y-4 px-6 reveal mb-6">
                        <Image
                            src={import('../../assets/about/about-brand.png')}
                            alt="Custom branding icon"
                            class="mx-auto w-30"
                            loading="lazy"
                            width={100}
                            height={100}
                        />
                        <h3 class="text-xl md:text-3xl font-bold">Branding</h3>
                        <p class="underline text-lg md:text-xl leading-tight">
                            Custom branding and private labeling
                        </p>
                        <p
                            class="text-lg md:text-xl leading-tight text-black/80"
                        >
                            Stand out in the market with distinctive branding
                            and private labeling options tailored to your
                            brand’s identity and customer expectations.
                        </p>
                    </div>

                    <!-- ITEM -->
                    <div class="space-y-4 px-6 reveal mb-6">
                        <Image
                            src={import('../../assets/about/about-packaging.png')}
                            alt={translations.expertise.packaging.alt}
                            class="mx-auto w-30"
                            loading="lazy"
                            width={100}
                            height={100}
                        />
                        <h3 class="text-xl md:text-3xl font-bold">{translations.expertise.packaging.title}</h3>
                        <p class="underline text-lg md:text-xl leading-tight">
                            {translations.expertise.packaging.subtitle}
                        </p>
                        <p
                            class="text-lg md:text-xl leading-tight text-black/80"
                        >
                            {translations.expertise.packaging.description}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Bottom Text -->
            <p
                class="max-w-9xl mx-auto
      mt-16
      text-lg lg:text-2xl
      text-black/80 reveal"
            >
                {translations.expertise.bottomText}
            </p>
        </div>
    </section>

    <section class="relative">
        <!-- Background Image -->
        <div class="relative h-[420px] md:h-[520px] lg:h-[600px]">
            <Image
                src={import('../../assets/about/stamping-process.jpg')}
                alt={translations.quality.altBackground}
                class="mx-auto w-full object-cover h-full"
                loading="lazy"
                width={1200}
                height={400}
            />

            <!-- Optional subtle dark overlay -->
            <div class="absolute inset-0 bg-black/10"></div>

            <!-- CENTER CONTENT -->
            <div
                class="absolute inset-0 flex flex-col items-center justify-center px-6 text-center"
            >
                <!-- Title Card -->
                <div
                    class="bg-[#e5e7e6]
        px-8 md:px-12 lg:px-16
        py-6 md:py-8
        shadow-md
        max-w-2xl reveal"
                >
                    <h2
                        class="text-5xl md:text-6xl lg:text-7xl
          font-bold leading-tight"
                    >
                        {translations.quality.title}
                    </h2>
                </div>

                <!-- Black Badge -->
                <div
                    class="bg-black text-white
        px-6 py-3
        font-semibold
        text-xl md:text-3xl
        -mt-6
        shadow reveal"
                >
                    {translations.quality.subtitle}
                </div>

                <!-- Caption -->
                <p
                    class="text-white
                    bg-[#42544E]
                    max-w-9xl
        text-sm md:text-md
        mt-6
        max-w-3xl
        drop-shadow reveal"
                >
                    {translations.quality.description}
                </p>
            </div>
        </div>
    </section>

    <section class="bg-[#d8c9a6] py-16 lg:py-24">
        <div class="max-w-9xl mx-auto px-6 lg:px-12">
            <div class="grid md:grid-cols-2 gap-12 lg:gap-20 items-center">
                <!-- LEFT CONTENT -->
                <div class="reveal-left">
                    <!-- Title -->
                    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
                        {translations.team.title}
                    </h2>

                    <!-- Name -->
                    <h3
                        class="text-lg md:text-xl lg:text-3xl
          font-semibold
          mb-4"
                    >
                        {translations.team.name}
                    </h3>

                    <!-- Description -->
                    <p
                        class="text-sm md:text-base lg:text-2xl leading-tight
          leading-relaxed
          max-w-2xl
          mb-8"
                    >
                        {translations.team.description}
                    </p>

                    <!-- Button -->
                    <a
                        href="/en/people"
                        class="bg-[#4a4a4a] text-white px-6 py-3 rounded text-sm md:text-base hover:opacity-90 transition inline-block"
                        aria-label="Learn more about Mr. Yeoh Hon Poh"
                    >
                        {translations.team.learnMore}
                    </a>
                </div>

                <!-- RIGHT IMAGE -->
                <div
                    class="relative flex justify-center md:justify-start reveal-right"
                >
                    <!-- Divider line (desktop only) -->
                    <div
                        class="hidden md:block
          absolute left-0 top-0 bottom-0
          w-px bg-teal-700/40"
                    >
                    </div>

                    <!-- Portrait -->
                    <Image
                        src={import('../../assets/about/mr-yeoh-hon-poh.jpg')}
                        alt={translations.team.alt}
                        class="w-72 md:w-80 lg:w-96 object-cover md:ml-12"
                        loading="lazy"
                        width={320}
                        height={427}
                    />
                </div>
            </div>
        </div>
    </section>

    <section class="bg-black py-16 lg:py-24">
        <div class="max-w-9xl mx-auto px-6 lg:px-12">
            <div class="grid md:grid-cols-2 gap-10 items-top">
                <!-- LEFT HEADLINE -->
                <div class="reveal-left">
                    <h2
                        class="text-white
          font-bold
          text-3xl md:text-5xl lg:text-6xl
          leading-tight"
                    >
                        {translations.partner.title}
                    </h2>
                </div>

                <!-- RIGHT CONTENT -->
                <div class="md:pl-12 reveal-right">
                    <p
                        class="text-gray-300
          text-sm md:text-base lg:text-2xl
          mb-6"
                    >
                        {translations.partner.description}
                    </p>

                    <a
                        href="/en/contact"
                        class="bg-[#6f8f85] text-white px-6 py-3 rounded text-sm md:text-base hover:opacity-90 transition inline-block"
                        aria-label="Read more about partnering with QCI"
                    >
                        {translations.partner.contactUs}
                    </a>
                </div>
            </div>
        </div>
    </section>
    <Footer language={lang} />
</BaseLayout>

<script>
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("show");
                }
            });
        },
        { threshold: 0.2 },
    );
    document
        .querySelectorAll(".reveal, .reveal-left, .reveal-right")
        .forEach((el) => observer.observe(el));
</script>

<style>
    /* Scroll reveal animations */
    .reveal,
    .reveal-left,
    .reveal-right {
        opacity: 0;
        transition: all 1s ease;
    }

    .reveal {
        transform: translateY(40px);
    }

    .reveal-left {
        transform: translateX(-80px);
    }

    .reveal-right {
        transform: translateX(80px);
    }

    /* Show state */
    .show {
        opacity: 1;
        transform: translate(0, 0);
    }
</style>
